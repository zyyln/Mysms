<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/selectcrane_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99464547"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="35dp"
        android:background="@drawable/work_panel_select_bg"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
            android:id="@+id/selectcrane_tv_title"
            style="@style/font2_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColorHint="@color/black"
            android:textStyle="bold" />

        <GridView
            android:id="@+id/selectcrane_gv_crane"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="6"
            android:cacheColorHint="@android:color/transparent"
            android:fadingEdge="none"
            android:horizontalSpacing="@dimen/GridSpacing"
            android:numColumns="2"
            android:verticalSpacing="@dimen/GridSpacing" >
        </GridView>

        <Button
            android:id="@+id/selectcrane_btn_confirm"
            style="@style/font2_black"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/work_panel_ok_button_selected"
            android:text="@string/confirm"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>