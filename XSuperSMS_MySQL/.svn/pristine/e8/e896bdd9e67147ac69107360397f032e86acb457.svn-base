<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_bindmsg"
        style="@style/font2_black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/barcode_name_right"
        android:gravity="center"
        android:text="@string/barcode_name_assosiation" />

    <EditText
        android:id="@+id/et_bindmsg"
        style="@style/font2_black"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/input_mid"
        android:gravity="center_vertical"
        android:singleLine="true" />

    <ImageButton
        android:id="@+id/imgbtn_bindmsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/botton_arrow" />

</LinearLayout>