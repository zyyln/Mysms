<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/codebind_bindway"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99464547"
    android:gravity="center" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/crane_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp" >

        <TextView
            style="@style/font2_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_barcodebind_way" />

        <RadioGroup
            android:id="@+id/codebind_rg_bindway"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical" >

            <RadioButton
                android:id="@+id/codebind_rdbtn_billno"
                style="@style/BarcodeRadioBtnTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:singleLine="true"
                android:text="@string/billno_bind" />

            <RadioButton
                android:id="@+id/codebind_rdbtn_inmsg"
                style="@style/BarcodeRadioBtnTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:singleLine="true"
                android:text="@string/fillin_msg_bind" />
        </RadioGroup>
    </LinearLayout>

</RelativeLayout>