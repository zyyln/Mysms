<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sheetitem_layout_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sheet_detail_head_bg"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/sheetitem_tv_barcode"
        style="@style/font2_black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="2.5"
        android:gravity="center"
        android:text="@string/barcode" />

    <TextView
        android:id="@+id/sheetitem_tv_floor"
        style="@style/font2_black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/layer" />

    <TextView
        android:id="@+id/sheetitem_tv_material"
        style="@style/font2_black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:gravity="center"
        android:text="@string/material" />

    <TextView
        android:id="@+id/sheetitem_tv_thickness"
        style="@style/font2_black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/thickness" />

    <TextView
        android:id="@+id/sheetitem_tv_length"
        style="@style/font2_black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:gravity="center"
        android:text="@string/length" />

    <TextView
        android:id="@+id/sheetitem_tv_width"
        style="@style/font2_black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:gravity="center"
        android:text="@string/width" />

    <TextView
        android:id="@+id/sheetitem_tv_code"
        style="@style/font2_black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:gravity="center"
        android:text="@string/sheet_code"
        android:visibility="gone" />

    <TextView
        android:id="@+id/sheetitem_tv_checkoutid"
        style="@style/font2_black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:text="@string/projectid" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:gravity="center" >

        <TextView
            style="@style/font2_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/sheet_operate"
            android:visibility="visible" />

        <TextView
            android:id="@+id/sheetitem_tv_options"
            style="@style/font2_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_confirm"
            android:gravity="center"
            android:text="@string/sheet_options"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>