<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/crane_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp" >

    <ListView
        android:id="@+id/seleCrane_lv_haulage"
        android:layout_width="180dp"
        android:layout_height="@dimen/height_crane"
        android:layout_marginTop="10dp"
        android:layout_weight="6"
        android:fadeScrollbars="false"
        android:scrollbarFadeDuration="0" >
    </ListView>

    <Button
        android:id="@+id/seleCrane_btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@drawable/work_panel_ok_button_selected"
        android:text="@string/confirm"
        android:textSize="@dimen/textSize_1" />

</LinearLayout>