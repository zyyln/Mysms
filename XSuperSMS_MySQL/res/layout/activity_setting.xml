<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_bg"
    android:orientation="vertical">

    <include
        layout="@layout/layout_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40_dip" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/dimen_5_dip"
        android:layout_weight="1.5"
        android:background="@drawable/plan_content_bj"
        android:padding="@dimen/dimen_5_dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/setting_change_password"
                style="@style/setting_layout">

                <TextView
                    style="@style/setting_text"
                    android:text="@string/setting_change_password" />

                <ImageView style="@style/setting_arrow_img" />
            </LinearLayout>

            <LinearLayout
                style="@style/setting_layout"
                android:layout_marginTop="@dimen/dimen_2_dip">

                <TextView
                    style="@style/setting_text"
                    android:text="@string/crane_order" />

                <ImageButton
                    android:id="@+id/img_swt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dimen_20_dip" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/setting_clean_localData"
                style="@style/setting_layout"
                android:layout_marginTop="@dimen/dimen_2_dip">

                <TextView
                    style="@style/setting_text"
                    android:text="@string/clean_local_data" />

                <TextView
                    android:id="@+id/localDataSize"
                    style="@style/setting_text"
                    android:text="0KB" />

                <ImageView style="@style/setting_arrow_img" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/setting_configure_fields"
                style="@style/setting_layout"
                android:layout_marginTop="@dimen/dimen_2_dip">

                <TextView
                    style="@style/setting_text"
                    android:text="@string/configure_list_fields" />

                <ImageView style="@style/setting_arrow_img" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/setting_use_help"
                style="@style/setting_layout"
                android:layout_marginTop="@dimen/dimen_2_dip">

                <TextView
                    style="@style/setting_text"
                    android:text="@string/setting_use_help" />

                <ImageView style="@style/setting_arrow_img" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/setting_about_us"
                style="@style/setting_layout"
                android:layout_marginTop="@dimen/dimen_2_dip">

                <TextView
                    style="@style/setting_text"
                    android:text="@string/contactUs" />

                <ImageView style="@style/setting_arrow_img" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/setting_check_version"
                style="@style/setting_layout"
                android:layout_marginTop="@dimen/dimen_2_dip">

                <TextView
                    style="@style/setting_text"
                    android:text="@string/setting_check_version" />

                <TextView
                    android:id="@+id/setting_tv_vername"
                    style="@style/setting_text"
                    android:text="versionName" />

                <ImageView style="@style/setting_arrow_img" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/setting_Bluetooth"
                style="@style/setting_layout"
                android:layout_marginTop="@dimen/dimen_2_dip"
                android:visibility="gone">

                <TextView
                    style="@style/setting_text"
                    android:text="@string/setting_bluetooth" />

                <ImageView style="@style/setting_arrow_img" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include
        layout="@layout/layout_footer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_25_dip" />

</LinearLayout>