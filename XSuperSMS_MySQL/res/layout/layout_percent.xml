<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_20_dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/prcent_tv_fin"
            style="@style/font3_white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/worklook_green"
            android:maxLines="1" />

        <TextView
            android:id="@+id/prcent_tv_unf"
            style="@style/font3_white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/worklook_gray"
            android:maxLines="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_2_dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/percent_type_1_view"
            android:layout_width="@dimen/dimen_16_dip"
            android:layout_height="@dimen/dimen_16_dip"
            android:background="@drawable/worklook_legend_green"
            android:typeface="normal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_3_dip"
            android:orientation="vertical">

            <TextView
                android:id="@+id/percent_type_1_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@string/workInfo_finish"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_12_dip" />

            <TextView
                android:id="@+id/percent_type_1_value1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_12_dip" />
        </LinearLayout>

        <TextView
            android:id="@+id/percent_type_2_view"
            android:layout_width="@dimen/dimen_16_dip"
            android:layout_height="@dimen/dimen_16_dip"
            android:layout_marginLeft="@dimen/dimen_3_dip"
            android:background="@drawable/worklook_legend_gray"
            android:typeface="normal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_3_dip"
            android:orientation="vertical">

            <TextView
                android:id="@+id/percent_type_2_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@string/workInfo_unfinish"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_12_dip" />

            <TextView
                android:id="@+id/percent_type_2_value1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_12_dip" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>