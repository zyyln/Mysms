<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_bg"
    android:orientation="vertical">

    <include
        layout="@layout/layout_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40_dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/dimen_5_dip"
        android:layout_weight="1"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@drawable/plan_content_bj"
            android:orientation="vertical"
            android:padding="2dp">

            <Button
                android:id="@+id/workinfo_useratio_users_btn"
                style="@style/font2_black"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:background="@drawable/workinfo_useratio_btn_selector"
                android:text="@string/workInfo_useratio_users" />

            <Button
                android:id="@+id/workinfo_useratio_deep_btn"
                style="@style/font2_black"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/dimen_2_dip"
                android:layout_weight="0.1"
                android:background="@drawable/workinfo_useratio_btn_selector"
                android:text="@string/thickness" />

            <Button
                android:id="@+id/workinfo_useratio_type_btn"
                style="@style/font2_black"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/dimen_2_dip"
                android:layout_weight="0.1"
                android:background="@drawable/workinfo_useratio_btn_selector"
                android:text="@string/material" />

            <Button
                android:id="@+id/workinfo_useratio_device_btn"
                style="@style/font2_black"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/dimen_2_dip"
                android:layout_weight="0.1"
                android:background="@drawable/workinfo_useratio_btn_selector"
                android:text="@string/workInfo_useratio_device" />

            <com.xuesi.sms.widget.DashBoardView
                android:id="@+id/useratio_dashboard"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/dimen_2_dip"
                android:layout_weight="0.5" />

            <TextView
                android:id="@+id/workinfo_useratio_percent"
                style="@style/font2_black"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/dimen_2_dip"
                android:layout_weight="0.1"
                android:background="@drawable/workinfo_useratio_btn_normal"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_10_dip"
            android:layout_weight="5"
            android:background="@drawable/plan_content_bj"
            android:orientation="vertical"
            android:padding="@dimen/dimen_5_dip">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/workinfo_useratio_chart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" />
            </LinearLayout>

            <include
                layout="@layout/layout_timebtn_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right" />
        </LinearLayout>
    </LinearLayout>

    <include
        layout="@layout/layout_footer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_25_dip" />

</LinearLayout>