<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <fragment
        android:id="@+id/id_top"
        android:name="com.xuesi.sms.app.fragment.TopFragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40_dip" />

<data>

</data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/id_leftContent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/id_top"
            android:layout_weight="2"
            android:background="@drawable/plan_content_bj"
            android:orientation="vertical"
            android:padding="@dimen/dimen_2_dip" />

        <FrameLayout
            android:id="@+id/id_rightContent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_below="@id/id_top"
            android:layout_marginLeft="@dimen/dimen_10_dip"
            android:layout_weight="5"
            android:background="@drawable/plan_content_bj"
            android:orientation="vertical" />

    </LinearLayout>


</LinearLayout>
