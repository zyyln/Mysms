<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_bg"
    android:orientation="vertical">

    <include
        layout="@layout/layout_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40_dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/dimen_5_dip"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/plan_content_bj"
            android:orientation="vertical"
            android:padding="@dimen/dimen_5_dip">

            <TextView
                style="@style/font2_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/query_steel"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/normal_btn_bg"
                android:gravity="center_vertical">

                <TextView
                    style="@style/styles_infoquery_text"
                    android:text="@string/barcode_" />

                <EditText
                    android:id="@+id/info_query_steel_code"
                    style="@style/styles_infoquery_edit" />

                <ImageView
                    android:id="@+id/img_scan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_2_dip"
                    android:src="@drawable/scan_small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_2_dip">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/normal_btn_bg"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/styles_infoquery_text"
                        android:text="@string/thickness_" />

                    <EditText
                        android:id="@+id/info_query_steel_thickness"
                        style="@style/styles_infoquery_edit"
                        android:inputType="numberDecimal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_2_dip"
                    android:layout_weight="1"
                    android:background="@drawable/normal_btn_bg"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/styles_infoquery_text"
                        android:text="@string/material_" />

                    <EditText
                        android:id="@+id/info_query_steel_material"
                        style="@style/styles_infoquery_edit" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_2_dip">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/normal_btn_bg"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/styles_infoquery_text"
                        android:text="@string/length_" />

                    <EditText
                        android:id="@+id/info_query_steel_length"
                        style="@style/styles_infoquery_edit"
                        android:inputType="numberDecimal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_2_dip"
                    android:layout_weight="1"
                    android:background="@drawable/normal_btn_bg"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/styles_infoquery_text"
                        android:text="@string/width_" />

                    <EditText
                        android:id="@+id/info_query_steel_width"
                        style="@style/styles_infoquery_edit"
                        android:inputType="numberDecimal" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_2_dip">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/normal_btn_bg"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/styles_infoquery_text"
                        android:text="@string/project_" />

                    <EditText
                        android:id="@+id/info_query_steel_project"
                        style="@style/styles_infoquery_edit" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_2_dip"
                    android:layout_weight="1"
                    android:background="@drawable/normal_btn_bg"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/styles_infoquery_text"
                        android:text="@string/section_" />

                    <EditText
                        android:id="@+id/info_query_steel_section"
                        style="@style/styles_infoquery_edit" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_2_dip"
                android:background="@drawable/normal_btn_bg"
                android:gravity="center_vertical">

                <TextView
                    style="@style/styles_infoquery_text"
                    android:text="@string/time_" />

                <EditText
                    android:id="@+id/info_query_steel_time"
                    style="@style/styles_infoquery_edit"
                    android:hint="YYYYMMDD"
                    android:inputType="date" />
            </LinearLayout>

            <Button
                android:id="@+id/info_query_steel_btn"
                style="@style/font2_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dimen_2_dip"
                android:background="@drawable/selector_btn_confirm"
                android:text="@string/query"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_10_dip"
            android:layout_weight="5"
            android:background="@drawable/plan_content_bj"
            android:orientation="vertical"
            android:padding="@dimen/dimen_2_dip">

            <include
                layout="@layout/item_lv_info_query_steel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1" />

            <ListView
                android:id="@+id/info_query_result_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:background="@drawable/shape_rectangle_rim"
                android:divider="@android:color/transparent"
                android:dividerHeight="@dimen/dimen_2_dip"
                android:fadingEdge="none" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="1dp"
                android:layout_weight="0.1"
                android:background="@drawable/work_panel_text_bg"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_10_dip"
                android:paddingRight="@dimen/dimen_10_dip">

                <TextView
                    style="@style/font2_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/info_query_result_total" />

                <TextView
                    android:id="@+id/infoquery_tv_total"
                    style="@style/font2_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    style="@style/font2_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5_dip"
                    android:text="@string/steel_count_" />

                <TextView
                    android:id="@+id/infoquery_tv_value"
                    style="@style/font2_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <include
        layout="@layout/layout_footer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_25_dip" />

</LinearLayout>