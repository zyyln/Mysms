<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/work_panel_select_bg"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/option_out_btn_detail"
        style="@style/font2_black"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/selector_btn_options"
        android:text="@string/detail_info" />

    <Button
        android:id="@+id/option_out_btn_shift"
        style="@style/font2_black"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dimen_10_dip"
        android:layout_weight="1"
        android:background="@drawable/selector_btn_options"
        android:text="@string/shift" />

    <Button
        android:id="@+id/option_out_btn_project"
        style="@style/font2_black"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dimen_10_dip"
        android:layout_weight="1"
        android:background="@drawable/selector_btn_options"
        android:text="@string/sheet_project" />

    <Button
        android:id="@+id/option_out_btn_rust"
        style="@style/font2_black"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dimen_10_dip"
        android:layout_weight="1"
        android:background="@drawable/selector_btn_options"
        android:text="@string/sheet_rust" />

    <Button
        android:id="@+id/option_out_btn_scan"
        style="@style/font2_black"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dimen_10_dip"
        android:layout_weight="1"
        android:background="@drawable/selector_btn_options"
        android:text="@string/sheet_scanVerify" />

</LinearLayout>