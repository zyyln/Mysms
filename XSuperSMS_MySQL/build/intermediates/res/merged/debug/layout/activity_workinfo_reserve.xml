<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_bg"
    android:orientation="vertical">

    <include
        layout="@layout/layout_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40_dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/dimen_5_dip"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/plan_content_bj">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/dimen_2_dip">

                <TextView
                    style="@style/font2_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/sheet" />

                <TextView
                    android:id="@+id/workinfo_reserve_steel_count"
                    style="@style/font3_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:background="@drawable/plan_type_green_light"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/workinfo_reserve_steel_weight"
                    style="@style/font3_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_2_dip"
                    android:layout_weight="1.5"
                    android:background="@drawable/plan_type_orange_light"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/workinfo_reserve_steel_count_new"
                    style="@style/font3_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_2_dip"
                    android:layout_weight="1.5"
                    android:background="@drawable/plan_type_new_work"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/workinfo_reserve_steel_weight_new"
                    style="@style/font3_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_2_dip"
                    android:layout_weight="1.5"
                    android:background="@drawable/plan_type_new_work"
                    android:gravity="center" />

                <TextView
                    style="@style/font2_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/remnant" />

                <TextView
                    android:id="@+id/workinfo_reserve_margin_count"
                    style="@style/font3_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:background="@drawable/plan_type_green_light"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/workinfo_reserve_margin_weight"
                    style="@style/font3_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_2_dip"
                    android:layout_weight="1.5"
                    android:background="@drawable/plan_type_orange_light"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/workinfo_reserve_margin_count_new"
                    style="@style/font3_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_2_dip"
                    android:layout_weight="1.5"
                    android:background="@drawable/plan_type_new_work"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/workinfo_reserve_margin_weight_new"
                    style="@style/font3_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_2_dip"
                    android:layout_weight="1.5"
                    android:background="@drawable/plan_type_new_work"
                    android:gravity="center" />

                <TextView
                    style="@style/font2_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/articlesBeingProcessed" />

                <TextView
                    android:id="@+id/workinfo_reserve_making_count"
                    style="@style/font3_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:background="@drawable/plan_type_green_light"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/workinfo_reserve_making_weight"
                    style="@style/font3_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_2_dip"
                    android:layout_weight="1.5"
                    android:background="@drawable/plan_type_orange_light"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/workinfo_reserve_making_count_new"
                    style="@style/font3_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_2_dip"
                    android:layout_weight="1.5"
                    android:background="@drawable/plan_type_new_work"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/workinfo_reserve_making_weight_new"
                    style="@style/font3_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_2_dip"
                    android:layout_weight="1.5"
                    android:background="@drawable/plan_type_new_work"
                    android:gravity="center" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_10_dip"
            android:layout_weight="3"
            android:background="@drawable/plan_content_bj"
            android:orientation="vertical"
            android:padding="@dimen/dimen_2_dip">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.15">

                <Button
                    android:id="@+id/workinfo_reserve_steel_btn"
                    style="@style/font2_black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/workinfo_useratio_btn_selector"
                    android:gravity="center"
                    android:text="@string/sheet" />

                <Button
                    android:id="@+id/workinfo_reserve_margin_btn"
                    style="@style/font2_black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_1_dip"
                    android:layout_weight="1"
                    android:background="@drawable/workinfo_useratio_btn_selector"
                    android:gravity="center"
                    android:text="@string/remnant" />

                <Button
                    android:id="@+id/workinfo_reserve_making_btn"
                    style="@style/font2_black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_1_dip"
                    android:layout_weight="1"
                    android:background="@drawable/workinfo_useratio_btn_selector"
                    android:gravity="center"
                    android:text="@string/articlesBeingProcessed" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/dimen_5_dip"
                android:layout_weight="0.7">

                <LinearLayout
                    android:id="@+id/workinfo_reserve_weight_chart"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" />

                <LinearLayout
                    android:id="@+id/workinfo_reserve_count_chart"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_5_dip"
                    android:layout_weight="1"
                    android:orientation="vertical" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5_dip">

                <include
                    layout="@layout/layout_timebtn_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/dimen_5_dip" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/dimen_30_dip"
                            android:layout_height="@dimen/dimen_1_dip"
                            android:layout_gravity="center"
                            android:background="@color/orange" />

                        <TextView
                            android:id="@+id/workinfo_reserve_sheet_weight"
                            style="@style/font3_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_2_dip"
                            android:text="@string/steel_weight" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/dimen_20_dip"
                            android:layout_height="@dimen/dimen_1_dip"
                            android:layout_gravity="center"
                            android:background="@color/green" />

                        <TextView
                            android:id="@+id/workinfo_reserve_sheet_count"
                            style="@style/font3_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_2_dip"
                            android:text="@string/steel_count" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <include
        layout="@layout/layout_footer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_25_dip" />

</LinearLayout>