<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/normal_top_bg" >

    <Button
        android:id="@+id/navi_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_15_dip"
        android:background="@drawable/selector_btn_back" />

    <Button
        android:id="@+id/navi_btn_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_15_dip"
        android:layout_toRightOf="@id/navi_btn_back"
        android:background="@drawable/selector_btn_refresh" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_sms_small" />

</RelativeLayout>